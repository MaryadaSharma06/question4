<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The package name is no longer set here. -->

    <!-- Optional permissions if needed -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"> <!-- Replace with your theme -->

        <!-- MainActivity as the launcher activity -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities like LoginActivity and HomeActivity -->
        <activity android:name=".LoginActivity" />
        <activity android:name=".HomeActivity" />
    </application>

</manifest>

